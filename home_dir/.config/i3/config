set $mode_compton compton: k -> kill; Run: c -> compton; p -> picom; l -> picom lite; o -> picom_origin lite; O -> picom_origin
bindsym $mod+$alt+c mode "$mode_compton"
mode "$mode_compton" {
        bindsym k       exec --no-startup-id killall compton || killall picom
        bindsym c       exec --no-startup-id $compton; mode "default"
        bindsym p       exec --no-startup-id $picom; mode "default"
        bindsym l       exec --no-startup-id $picom_lite; mode "default"
        bindsym o       exec --no-startup-id $picom_origin_lite; mode "default"
        bindsym Shift+o exec --no-startup-id $picom_origin; mode "default"
        bindsym Shift+c exec --no-startup-id compton; mode "default"
        bindsym Shift+p exec --no-startup-id $picom_raw; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

